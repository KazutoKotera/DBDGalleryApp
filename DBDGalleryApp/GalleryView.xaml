<UserControl x:Class="DBDGalleryApp.GalleryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <!-- 3列構成 左：前へ / 中央：ギャラリー / 右：次へ -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <!-- 左ボタンの幅 -->
            <ColumnDefinition Width="*"/>
            <!-- ギャラリー -->
            <ColumnDefinition Width="80"/>
            <!-- 右ボタンの幅 -->
        </Grid.ColumnDefinitions>

        <!-- 右上に S / K ボタンを並べる -->
        <StackPanel Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="10,0,10,0"
            Grid.ColumnSpan="3">
            <!-- ★ 追加 -->
            <Button x:Name="BtnShowS"
            Content="S"
            Width="150" Height="30" Margin="0"
            Click="BtnShowS_Click"/>
            <Button x:Name="BtnShowK"
            Content="K"
            Width="150" Height="30" Margin="0"
            Click="BtnShowK_Click"/>
        </StackPanel>

        <!-- 左ボタン -->
        <Button Content="◀" Click="PrevPage_Click"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="40"/>

        <Viewbox Stretch="Uniform" Grid.Column="1">
            <StackPanel>
                <Grid Width="1400" Height="800">
                    <ItemsControl x:Name="ItemGrid" Margin="15,150,15,10">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="3" Columns="5" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Grid>

                <!-- ★ ギャラリーの下にページ表記を追加 -->
                <Label x:Name="PageLabel"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       FontSize="20"
                       Content="[1/1]"/>
            </StackPanel>
        </Viewbox>

        <!-- 右ボタン -->
        <Button Content="▶" Click="NextPage_Click"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="40"/>

        <!-- 戻るボタン（左上） -->
        <Button Content="戻る" Click="Back_Click"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10"/>
    </Grid>
</UserControl>
